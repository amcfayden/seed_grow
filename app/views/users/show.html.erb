<% provide(:title, @user.name) %>
<div class="row">
  <aside class="span4">
    <section>
      <h1>
        <%= gravatar_for @user, size: 100 %>
        <%= @user.name %>
      </h1>
    </section>
    <section>
      <%= render 'shared/stats' %>
    </section>
  </aside>

  <div class="span8">
    <%= render 'follow_form' if signed_in? %>

    <% if @user.seeds.any? %>
      <h3>Seeds (<%= @user.seeds.count %>)</h3>
      <ol class="seeds">
        <%= render @seeds %>
      </ol>
      <%= will_paginate @seeds %>
    <% end %>

  </div>
</div>